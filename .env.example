# DRMS Configuration
# Copy this file to .env and fill in your settings

# OpenAI API Key (optional - for better embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# DRMS Settings
DRMS_VECTOR_DB_PATH=./chroma_db
DRMS_CACHE_DIR=./data/cache
DRMS_USE_OPENAI_EMBEDDINGS=false
DRMS_EMBEDDING_MODEL=all-MiniLM-L6-v2

# API Settings
DRMS_API_HOST=localhost
DRMS_API_PORT=8000
DRMS_ENABLE_CORS=true

# Scraping Settings
DRMS_MAX_PAGES_PER_LIBRARY=50
DRMS_SCRAPING_DELAY=1.0
DRMS_REQUEST_TIMEOUT=30
DRMS_MAX_CONCURRENT_REQUESTS=10

# Performance Settings
DRMS_CHUNK_SIZE=500
DRMS_MAX_RESULTS=20

# Logging
DRMS_LOG_LEVEL=INFO
DRMS_LOG_FILE=